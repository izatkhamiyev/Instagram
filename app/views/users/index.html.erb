<ul class="users">
  <% @users.each do |user| %>
    <li>
      <% unless user.avatar.attachment.nil? %>
		    <%= image_tag user.avatar,size: 50%>
	     <% else %>
		     <%=image_tag src="https://www.bsn.eu/wp-content/uploads/2016/12/user-icon-image-placeholder-300-grey.jpg",size: 50%>
  	  <% end %>
      <%= link_to user.username, user %>
    </li>
  <% end %>
</ul>